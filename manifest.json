{
  "manifest_version": 3,
  "name": "Télécharger YouTube",
  "version": "1.2",
  "description": "Une extension Chrome pour télécharger des vidéos YouTube.",
  "permissions": [
    "tabs",
    "activeTab",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "http://br0nson.ddns.net:5000/*",
    "https://www.youtube.com/*",
    "https://youtu.be/*",
    "*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Télécharger YouTube"
  }
}
